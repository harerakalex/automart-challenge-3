{
  "name": "AutoMartApi",
  "version": "1.0.0",
  "description": "online shopping app for cars, ....",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development babel-node ./server/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node ./server/server.js",
    "test": "cross-env NODE_ENV=test npm run droptablesTests && cross-env NODE_ENV=test npm run createTablesTests && cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha server/test/*js --require @babel/polyfill --require @babel/register --timeout 10000 --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "showCoverage": "start coverage/lcov-report/index.html",
    "createTablesTests": "cross-env NODE_ENV=test node --require @babel/register ./server/models/createTables.js",
    "droptablesTests": "cross-env NODE_ENV=test node --require @babel/register ./server/models/dropTables.js",
    "createTables": "cross-env NODE_ENV=development node  --require @babel/register ./server/models/createTables.js",
    "dropTables": "cross-env NODE_ENV=development node --require @babel/register ./server/models/dropTables.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harerakalex/automart-challenge.git"
  },
  "keywords": [
    "carlos"
  ],
  "author": "harerimana carlos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/harerakalex/automart-challenge/issues"
  },
  "homepage": "https://github.com/harerakalex/automart-challenge-clone#readme",
  "dependencies": {
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cloudinary": "^1.14.0",
    "connect-multiparty": "^2.2.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^6.1.4",
    "pg": "^7.11.0",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1"
  }
}
